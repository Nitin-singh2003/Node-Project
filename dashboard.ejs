<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Indigo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      .bck{
        background-color: rgb(218, 146, 30);
      }
      .navbar {
        background-color: #1350e9; /* Indigo blue */
      }
      .navbar-brand img {
        width: 35px;
        height: 35px;
      }
      .navbar-brand {
        font-weight: 700;
        color: #fff;
        font-size: 1.2rem;
      }
      .navbar-nav .nav-link {
        color: #fff;
        font-weight: 500;
      }
      .navbar-nav .nav-link:hover {
        color: #d3e0fc; /* Light hover effect */
      }
      .navbar-nav .nav-link.active {
        font-weight: 700;
        color: #fff;
      }
      .navbar-text {
        color: #fff;
        font-weight: 500;
        margin-right: auto; /* Shift to the left */
        padding-right: 20px; /* Adjust spacing to the right */
      }
      .center-nav {
        margin-left: auto;
        margin-right: auto;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="/images/indigo logo.png" alt="Indigo Logo">
          Dashboard
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav center-nav mb-2 mb-lg-0"> <!-- Centered navigation items -->
            <li class="nav-item">
              <a class="nav-link active ms-3" aria-current="page" href="/flight/flightinterface" target="mw">Add Flights</a> <!-- Added ms-3 for space -->
            </li>
            <li class="nav-item">
              <a class="nav-link ms-3" href="/flight/displayallflights" target="mw">Flight List</a> <!-- Added ms-3 for space -->
            </li>
            <li class="nav-item">
              <a class="nav-link ms-3" href="/admin/adminlogout" >Logout</a> <!-- Added ms-3 for space -->
            </li>
          </ul>
          <span class="navbar-text"> <!-- Adjusted to shift left -->
            <%= data.adminname %>
          </span>
          
        </div>
        
      </div>
      
    </nav>
    <div class="col-md-12 bck">
        <h1 style="display: flex; text-align: center; justify-content: center; color: rgb(211, 19, 48); font-weight:bold ; font-style: italic;">Welcome To The Indigo Airlines</h1>
        <iframe name="mw" style="width: 100vw; height: 100vh; ">
          
        </iframe>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>